<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantActivity">
   
    <include layout="@layout/back_toolbar"></include>
    <android.support.v7.widget.AppCompatImageView
        android:layout_marginTop="50dp"
        android:id="@+id/img_restaurant"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/img_placeholder" />
    
    <RelativeLayout
        android:id="@+id/relRes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_restaurant"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/restName"
            android:text="Restautant"
            android:textSize="25sp"
            android:textColor="@color/black"
            
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/restLocation"
            android:text="location"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_location"
            android:layout_below="@+id/restName"
            android:textSize="18sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/relRes"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
    <android.support.v7.widget.AppCompatImageView

        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/map_background"/>

        <Button
            android:id="@+id/btn_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:textColor="@color/black"
            android:background="@drawable/rounded_hollow"
            android:text="Get Directions"/>
    </RelativeLayout>
    
</RelativeLayout>