<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/postbackground">

    <ImageView
        android:id="@+id/img_rest"
        android:layout_width="90dp"
        android:layout_marginLeft="10dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/upload_img_placeholder" />

    <TextView

        android:id="@+id/txt_res_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/img_rest"

        android:text="Restaurant name"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txt_res_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_res_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/img_rest"
        android:drawableLeft="@drawable/ic_location"
        android:text="Location"
        android:textSize="16sp" />
</RelativeLayout>